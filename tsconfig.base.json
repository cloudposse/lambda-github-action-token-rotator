{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@cloudposse/common": ["libs/common/src/index.ts"],
      "@cloudposse/github": ["libs/github/src/index.ts"]
    },
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": false
  },
  "exclude": ["node_modules", "tmp"]
}
